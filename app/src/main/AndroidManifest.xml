<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.bme.aut.android.flappybird">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:allowBackup="true">

        <activity
            android:name=".GameActivity"
            android:label="@string/flappybird"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Game" />
        <activity
            android:name=".LeaderboardActivity"
            android:label="@string/leaderboard"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Leaderboard"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/flappybird"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Login"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="stateVisible|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".notification.SnoozeBroadcastReceiver"
            android:exported="false"/>
        <receiver android:name=".notification.PromoBroadcastReceiver"
            android:exported="false"/>

    </application>
</manifest>